<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/heading_view"
            tools:text="HEADING"
            android:layout_marginTop="5dp"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_view"
            android:layout_marginTop="5dp"
            tools:text="SON SON SON SON SON SON SON SON SON SON SON"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/dialog_address"
            android:drawableLeft="@drawable/ic_location_on"
            android:drawableStart="@drawable/ic_location_on"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            tools:text="St. 102, Sector 25\nChandigarh"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_contact_tel"
            tools:text="+91 7696 497298"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_call"
            android:drawableStart="@drawable/ic_call"
            android:padding="5dp"
            android:textSize="18sp"
            android:drawablePadding="10dp"/>
</LinearLayout>